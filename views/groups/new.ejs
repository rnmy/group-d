<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align:center">Add New Group to <div><%= event.name %></div></h1>
    
    <div style="width: 30%; margin: 25px auto;">
        <form action="/events/<%= event._id %>/groups" method="POST">
            <div class="form-group">                    
                <input class="form-control" type="text" placeholder="Group Name" name="groupName">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Your Name" name="user">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>

        <a href="/events/<%= event._id %>">Go back</a>
    </div>
</div>

<%- include("../partials/footer") %>