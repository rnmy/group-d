<%- include("../partials/header") %>

<div class="container">
    <h1 class="display-4 pt-5">You are viewing: <strong><%= group.name%></strong></h1>
    <h6>Created By: <%= group.groupLeader.name %></h6>
    <h6><em><%=group.description%></em></h6>
    <a href="/events/<%= event._id%>/groups/<%= group._id%>/edit_info" class="btn btn-sm btn-secondary"> Edit Group Information</a>
    <hr>

    <div class="row">
      <div class="col-md-9">
        <h3 class="mb-4">Current Members:</h3>
        <% if (group.groupLeader.id.equals(currentUser._id)) { %>
          <h6 class="text-secondary mt-4 mb-4">You are currently the leader of <%= group.name%></h6>
        <% } else if(!(group.groupLeader.id.equals(currentUser._id)) && 
            group.users.includes(currentUser._id)) { %>
          <h6 class="text-secondary mt-4 mb-4">You are currently a member of <%= group.name%></h6>
        <% } else if (group.pending.includes(currentUser._id)) { %>
          <h6 class="text-secondary mt-4 mb-4">Your request to join <%= group.name%> is pending</h6>
        <% } else if (group.rejected.includes(currentUser._id)) { %>
          <h6 class="text-danger mt-4 mb-4">Your request to join <%= group.name%> has been rejected</h6>
        <% } %>

        <% group.users.forEach((user) => { %>
          <div class="row">
            <div class="col-lg-6 mt-3">
              <div class="card">
                <div class="card-body">
                  <% if(user._id.equals(currentUser._id)) { %>
                    <h6 class="card-title">You</h6>
                  <% } else { %>
                    <h6 class="card-title"><%= user.name%></h6>
                    <div class="card-text">
                      <a href="/users/<%= user._id%>">Click to view full profile</a>
                      <div>
                        <div style="width:50%; float:left;">
                          <form action="/events/<%= event._id%>/groups/<%= group._id%>/change_leader/<%= user._id%>?_method=PUT" method="POST" class="form-inline">
                            <button class="btn btn-sm btn-success mt-2">Make Group Leader</button>
                          </form>
                        </div>
                        <div style="width:50%; float:right;">
                          <form action="/events/<%= event._id%>/groups/<%= group._id%>/remove/<%= user._id%>?_method=PUT" method="POST" class="form-inline">
                            <button class="btn btn-sm btn-warning mt-2">Remove</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% })%>

        <div class="mt-5">
          <a href="/events/<%= event._id%>">Go back to <%= event.name%></a>
        </div>
      </div>

    <!-- Side Bar -->
    <% if(users.includes(currentUser._id)) { %>
        <div class="col-md-2 float-right text-center">
          <p class="lead"><strong>Settings</strong></p>
          <div class="list-group">
            <li class="list-group-item">
              <a href="/events/<%= event._id %>/groups/<%= group._id %>" class="text-dark">Group Page</a>
            </li>
            
            <% if(String(currentUser._id) == String(group.groupLeader.id)){ %>
              <li class="list-group-item text-decoration-none">
                <a href="/events/<%= event._id %>/groups/<%= group._id %>/pending" class="text-dark">
                  Pending Requests: <strong><%=group.pending.length%></strong>
                </a>
              </li>
            <% } %>
            <% if(currentUser._id.equals(group.groupLeader.id)) { %>
              <li class="list-group-item active">
                <a href="/events/<%= event._id %>/groups/<%= group._id %>/edit" class="text-dark">
                  Group Settings
                </a> 
              </li>
              <% if(!(group.isClosed)) { %> 
              <form action="/events/<%= event._id %>/groups/<%= group._id%>/close?_method=PUT" method="POST">
                <button class="btn btn-danger mt-3">Close Group</button>
              </form>
              <% } else if(group.isClosed) { %> 
                  <form action="/events/<%= event._id %>/groups/<%= group._id%>/reopen?_method=PUT" method="POST">
                    <button class="btn btn-warning mt-3">Reopen Group</button>
                  </form>
                <% } %> 
              <% if (group.users.length === 1 && group.pending.length === 0) { %>
                <form action="/events/<%= event._id %>/groups/<%= group._id%>/delete?_method=PUT" method="POST">
                  <button class="btn btn-link text-danger mt-3">Delete Group</button>
                </form>
                <% } %>
            <% } else { %>
              <li class="list-group-item">
                <form action="/events/<%= event._id%>/groups/<%= group._id%>/leave?_method=PUT" method="POST">
                  <button class="btn btn-sm text-danger" style="border: none; background: none;">Leave Group</button>
                </form>
              </li>
            <% } %>
          </div>
        </div>
      <% } %>

    </div>
  </div>

  <%- include("../partials/footer") %>
