<!DOCTYPE html>
<html>
    <head>
        <title>Group'd</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
        <link rel="stylesheet" href="/stylesheets/styles.css">
        <link rel="stylesheet" href="/stylesheets/search-filter.css">
    </head>
    <body>
        <div class="container mt-3">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>

  <div class="container" id="landing-header">
    <% if(!currentUser) { %>
    <h1 class="display-4 text-center mt-5 mb-3">
      Welcome to <strong>group'd!</strong>
    </h1>
    <div class="container">
      <div class="row">
        <div class="col text-center">
          <div class="form-group">
            <a href="/login"><button class="btn btn-primary form-control text-light" style="width: 300px;">Login</button></a>
          </div>
          <div class="form-group">
            <button class="btn btn-link form-control"><a href="/register">Don't have an account? Register with us.</a></button>
          </div>
        </div>
      </div>
    </div>
    <% } else { %>
      <h1 class="display-4 text-center mt-5 mb-3">You are currently using <strong>group'd!</strong></h1>
    <% } %>
  </div>
  <ul class="slideshow">
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
  </ul>


<%- include("./partials/footer") %>
